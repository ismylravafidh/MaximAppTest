@using MaximAppTest.Models;
@model List<Service>
@{
    int count = 0;
}
<div class="container-fluid">
    <div>
    <h1 class="h3 mb-4 text-gray-800">Slider Tables</h1>
    <a class="btn btn-primary" style="margin-left:90%" asp-action="Create" asp-controller="Service">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Icon</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Icon</td>
                <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Service" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Service" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>